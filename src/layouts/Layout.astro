---
import "@fontsource-variable/onest"
// Supports weights 200-900
import "@fontsource-variable/source-code-pro"
import Header from "../components/layouts/Header.astro"
import Footer from "../components/Footer.astro"

interface Props {
  title: string
  description: string
}

const { title, description } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <title>{title}</title>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="/foca-grey.svg" />
    <meta
      http-equiv="Page-Enter"
      content="revealTrans(duration=1, transition=1)"
    />

    <!-- Open Graph data -->
    <meta
      property="og:image"
      content="https://daliondev.online/foca-grey.svg"
    />
    <meta property="og:title" content={title} />
    <meta property="og:type" content="article" />
    <meta property="og:url" content=" http://daliondev.online/" />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="Dalion dev" />
    <meta property="article:published_time" content="2024-01-9" />
  </head>

  <body class="bg-flash-white dark:bg-erie-black text-pretty sm:m-0 m-3">
    <section class="container">
      <Header />
      <slot />
      <Footer />
    </section>
  </body>
</html>

<style>
  :root {
    color-scheme: light dark;
  }
  html {
    font-family: "Source Code Pro Variable", sans-serif;
  }

  .container {
    max-width: 700px;
    margin: 3rem auto 1rem auto;
    height: 100vh;
  }
</style>
